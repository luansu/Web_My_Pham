package orishop.DAO;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.ArrayList;
import java.util.List;

import orishop.models.EmployeeModels;

public class ProductDAOImp implements IProductDAO {
	Connection conn = null;
	PreparedStatement ps = null;
	ResultSet rs = null;
	public float totalRevenue(String productID) {
		String sql = "SELECT p.stock*p.UnitPrice doanhThy doanhThu FROM PRODUCT p WHERE p.productID = ?";
		try {
			conn = DBConnectionSQLServer.getConnectionW();
			ps = conn.prepareStatement(sql);
			ps.setString(1, productID);
			rs = ps.executeQuery();
			return rs.getFloat("doanhThu");
		} catch (Exception e) {
			e.printStackTrace();
		}
		return 0;
	}
	
	public static void main(String[] args) {
		IProductDAO pro = new ProductDAOImp();
		System.out.println(pro.totalRevenue("SP001"));
	}
}
